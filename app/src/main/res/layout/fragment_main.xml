<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivityFragment">

    <Button
        android:id="@+id/btn_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="Stop"
        android:layout_alignTop="@+id/btn_record"
        android:layout_toLeftOf="@+id/seek_accelerometer" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seek_gps"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/check_gps"
        android:layout_toLeftOf="@+id/btn_record"
        android:layout_toStartOf="@+id/btn_record"
        android:indeterminate="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPS"
        android:id="@+id/check_gps"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:layout_alignRight="@+id/seek_gps"
        android:layout_alignEnd="@+id/seek_gps" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seek_compass"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/seek_gps"
        android:layout_toRightOf="@+id/btn_record"
        android:layout_toEndOf="@+id/btn_record"
        android:indeterminate="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kompass"
        android:id="@+id/check_compass"
        android:checked="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/seek_compass"
        android:layout_alignStart="@+id/seek_compass" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyroskop"
        android:id="@+id/check_gyro"
        android:checked="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/seek_gps"
        android:layout_alignRight="@+id/seek_gps"
        android:layout_alignEnd="@+id/seek_gps"
        android:layout_marginTop="16dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seek_gyro"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/check_gyro"
        android:layout_alignRight="@+id/seek_gps"
        android:layout_alignEnd="@+id/seek_gps"
        android:indeterminate="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beschleunigung"
        android:id="@+id/check_accelerometer"
        android:checked="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/seek_compass"
        android:layout_alignLeft="@+id/seek_compass"
        android:layout_alignStart="@+id/seek_compass"
        android:layout_marginTop="16dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seek_accelerometer"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/check_accelerometer"
        android:layout_toRightOf="@+id/btn_record"
        android:layout_toEndOf="@+id/btn_record"
        android:indeterminate="false" />

</RelativeLayout>
